                <tbody>
                    <?php foreach($this->categories as $category): ?>
                        <?php if (get_class($category) === 'App\Model\Group'):
                            $group = $category;
                            $transactionsAmount = $group->getTransactionsAmount($transactionsQuery); ?>
                            <tr class="text-left">
                                <th><a href="<?= $this->pathFor('groups_edit', ['group_id' => $group->id]) ?>"><?= $group->name ?></a></th>
                                <th><?= sprintf($currencyFormat, $transactionsAmount) ?></th>
                                <th>&nbsp;</th>
                                <th>&nbsp;</th>
                            </tr>
                        <?php else:
                            $group = $category;
                            $transactionsAmount = $group->getTransactionsAmount($transactionsQuery);
                            $budget = $category->getBudgetByMonth($this->current_fund, $this->month_filter);
                            $remainingBudget = ($budget) ? $budget->amount - abs($transactionsAmount) : 0; ?>
                            <tr>
                                <td><a href="<?= $this->pathFor('categories_edit', ['category_id' => $category->id]) ?>">- <?= $category->name ?></a></td>
                                <td><?= sprintf($currencyFormat, $transactionsAmount) ?></td>
                                <td><?= sprintf($currencyFormat, @$budget->amount) ?></td>
                                <td class="<?= ($remainingBudget > 0) ? 'in-budget' : (($remainingBudget < 0) ? 'over-budget' : '') ?>"><?= ($budget) ?  sprintf($currencyFormat, $remainingBudget) : '&nbsp;' ?></td>
                            </tr>
                        <?php endif; ?>
                    <?php endforeach ?>
                </tbody>
            </table>

