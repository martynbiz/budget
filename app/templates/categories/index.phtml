<?php
$startDate = date('Y-m-01', strtotime($this->month_filter . '-01'));
$endDate = date('Y-m-t', strtotime($startDate));

$transactionsQuery = [
    'start_date' => $startDate,
    'end_date' => $endDate,
    'fund' => $this->current_fund,
];

$currencyFormat = $this->current_fund->currency->format;
?>

